<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="53dp"
            android:src="@drawable/ic_login" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/welcome_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:showDividers="middle">

        <include layout="@layout/line_one_px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="当前版本"
                android:textColor="@color/hex_222222"
                android:textSize="@dimen/text_h15" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.9.1"
                android:textColor="@color/hex_222222"
                android:textSize="@dimen/text_h15" />
        </LinearLayout>

        <include
            layout="@layout/line_one_px"
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/tv_user_protocol"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="5dp"
            android:gravity="center|left"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:text="@string/user_protocol"
            android:textColor="@color/hex_222222"
            android:textSize="@dimen/text_h15" />

        <include
            layout="@layout/line_one_px"
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <LinearLayout
            android:id="@+id/cs_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/transparent_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="@string/seat_order_detail_kefu_about"
                    android:textColor="@color/hex_222222"
                    android:textSize="@dimen/text_h15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:text="@string/seat_order_detail_kefu_work_time"
                    android:textColor="@color/hex_999999"
                    android:textSize="@dimen/text_h14" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:gravity="right"
                android:text="@string/seat_order_detail_kefu_phone"
                android:textColor="@color/hex_222222"
                android:textSize="@dimen/text_h15" />
        </LinearLayout>

        <include layout="@layout/line_one_px" />
    </LinearLayout>
</LinearLayout>